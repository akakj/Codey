generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  name     String?
}

model Problem {
  id         Int      @id @default(autoincrement())
  title      String
  difficulty String
  description String
  hints     String[]
  testCases Json   @default("[]") @db.JsonB
}

model Submission {
  id         Int      @id @default(autoincrement())
  userId     String
  problemId  Int
  code       String   @db.Text
  language   String 
  passed     Boolean  @default(false)
  createdAt  DateTime @default(now())
}

